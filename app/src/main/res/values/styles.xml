<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Labyrinth" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0067f4</item>
        <item name="colorPrimaryVariant">#0067f4</item>
        <item name="colorOnPrimary">#0067f4</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#0067f4</item>
        <item name="colorSecondaryVariant">#0067f4</item>
        <item name="colorOnSecondary">#0067f4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Disable AppBar cus ToolBar is cool -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Labyrinth.Splash" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>