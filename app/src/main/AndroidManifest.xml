<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.bandev.labyrinth">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Labyrinth"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity
            android:name=".SettingsAct"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.Labyrinth.NoActionBar" />
        <activity
            android:name=".ProfileAct"
            android:theme="@style/Theme.Labyrinth.NoActionBar" />
        <activity
            android:name=".projects.ReadMe"
            android:theme="@style/Theme.Labyrinth.NoActionBar" />
        <activity
            android:name=".ProjectAct"
            android:theme="@style/Theme.Labyrinth.NoActionBar" />
        <activity
            android:name=".MainAct"
            android:label="@string/title_activity_main"
            android:theme="@style/MainActivity" />
        <activity
            android:name=".projects.IssuesList"
            android:theme="@style/MainActivity" />
        <activity
            android:name=".intro.First"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name"
            android:theme="@style/Theme.Labyrinth.NoActionBar">

        </activity>

        <activity
            android:name=".Splash"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".intro.Second"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name"
            android:theme="@style/Theme.Labyrinth.NoActionBar">
        </activity>

        <activity
            android:name=".BiometricFailAct"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.Labyrinth.NoActionBar">
        </activity>
    </application>

</manifest>